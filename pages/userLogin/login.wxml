<view>
  <view class = "login-icon">
    <image class="login-img" src="../resource/images/logo.png"></image>
  </view>
  <view class="login-from">
    <form bindsubmit="doLogin">
      <view class="inputView">
        <image class="nameImage" src='../resource/images/用户.png'></image>
        <label class="loginLabel">手机号</label>
        <input name="username" class='inputText' placeholder='请输入手机号'></input>
      </view>
      <view class='line'></view>
    
      <view class='inputView'>
        <image class='keyImage' src='../resource/images/密码.png'></image>
        <label class='loginLabel'>密码</label>
        <input name='password' class='inputText' password='true' placeholder='请输入密码'></input>
      </view>

      <view>
        <button class='regist' type='primary' form-type='submit'>登录</button>
      </view>
      <view>
        <button class='goLoginBtn' type='warn' bindtap='goRegistPage'>立即注册</button>
      </view>
    </form>
  </view>
</view>